{% extends 'base.html.twig' %}

{% block title %}{{ showName }}{% endblock %}

{% block body %}
<div class="container">
    <div class="media">
      <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
      <div class="media-body">
        <h1 class="mt-0">{{ program.title }}</h1>
        <p>{{ program.synopsis }}</p>
        <p>Category: <a href="{{ path('show_category', { 'categoryName': hyphenizedCategory }) }}">{{ program.category.name }}</a></p>
        <p>
            <a href="{{ path('show_program', { 'programName': hyphenizedProgram  }) }}" class="btn btn-primary">View seasons list</a>
        </p>
        <hr />
        <a href="{{ path('wild_index') }}">
            Back to all TV shows
        </a>
      </div>
    </div>
</div>
{% endblock %}
